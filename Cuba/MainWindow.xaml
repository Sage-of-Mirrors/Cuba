<Window x:Class="Cuba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cuba"
        xmlns:opentk="clr-namespace:OpenTK;assembly=OpenTK.GLControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <WindowsFormsHost Margin="5" KeyDown="WindowsFormsHost_KeyDown" MouseWheel="WindowsFormsHost_MouseWheel" PreviewMouseWheel="WindowsFormsHost_PreviewMouseWheel">
                <opentk:GLControl x:Name="glControl" Load="GlControl_Load" Resize="GlControl_Resize" Scroll="GlControl_Scroll"/>
            </WindowsFormsHost>
        </DockPanel>
    </Grid>
</Window>
